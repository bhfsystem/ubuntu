Host *
  ServerAliveInterval 60

Host github.com
  ForwardAgent no
  StrictHostKeyChecking no

Host git.nih
  User ubuntu
  Port 2222
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/known_hosts.nih
  ProxyCommand bash -c 'nc gogs $1' -- %p
  IdentityFile ~/work/base/.ssh/ssh-container

Host *.nih
  User ubuntu
  Port 2222
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/known_hosts.nih
  ProxyCommand bash -c 'nc ${1%%.*}.node.consul $2' -- %h %p

Host *--*
  User ubuntu
  Port 2222
  ForwardAgent yes
  ProxyCommand bash -c 'home ssh "${1%%--*}".node.consul "$2" "${1##*--}"' -- %h %p
  StrictHostKeyChecking no
  UserKnownHostsFile ~/.ssh/known_hosts.meh
