#!/usr/bin/env bash

function main {
	while true; do
		if [[ -f "/var/lib/cloud/instance/boot-finished" ]]; then break; fi
    echo "Waiting for cloud-init boot-finished: $(date)"
		sleep 3
	done

  set -x
  git reset --hard
  home update
  block bootstrap
  make cache
  script/update
  script/update 172.28.128.1
}

main "$@"
