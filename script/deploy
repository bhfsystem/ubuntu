#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  set -exfu

  "$@" -o StrictHostKeychecking=no -- ssh -o StrictHostKeyChecking=no github.com 2>/dev/null || true

  "$@" sudo install -d -o ubuntu -g ubuntu /data
  "$@" sudo install -d -o ubuntu -g ubuntu /data/cache
  "$@" sudo install -d -o ubuntu -g ubuntu /config

  if "$@" test -d .git; then
    true
  else
    "$@" -A git clone git@github.com:imma/ubuntu
    "$@" mv ubuntu/.git .
    "$@" rm -rf ubuntu
    "$@" git reset --hard
  fi

  while true; do
    if "$@" test -f "/var/lib/cloud/instance/boot-finished"; then break; fi
    echo "Waiting for cloud-init boot-finished: $(date)"
    sleep 3
  done

  "$@" -A script/cibuild || true
  "$@" make cache

  if [[ -n "${nocache:-}" ]]; then
    "$@" home disable cache
  fi
  "$@" -A script/cibuild || true
  "$@" make cache
  if [[ -n "${nocache:-}" ]]; then
    "$@" home enable cache
  fi
}

main "$@"
