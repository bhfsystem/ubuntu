#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  set -exfu

  if ! "$@" test -d .git; then
    "$@" -A git clone git@github.com:imma/ubuntu
    "$@" mv ubuntu/.git .
    "$@" rm -rf ubuntu
    "$@" git reset --hard
  fi

  "$@" git reset --hard
  "$@" -t -A script/cibuild || true

  "$@" home disable cache
  "$@" -t -A script/cibuild
  "$@" home enable cache
}

main "$@"
