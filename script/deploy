#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  set -exfu

  if ! "$@" test -d .git; then
    "$@" -A ssh -o StrictHostKeyChecking=no git@github.com true || true
    "$@" -A git clone git@github.com:imma/ubuntu
    "$@" mv ubuntu/.git .
    "$@" rm -rf ubuntu
    "$@" git reset --hard
  fi

  "$@" git pull

  if "$@" curl -s http://cache.nih | grep Nexus; then
    "$@" home enable cache 2>/dev/null || true
    "$@" -t -A script/cibuild
    "$@" home disable cache
  else
    "$@" -t -A script/cibuild
  fi
}

main "$@"
