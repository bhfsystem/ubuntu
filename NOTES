#!/usr/bin/env bash

sudo install -d -o ubuntu -d ubuntu /data
sudo install -d -o ubuntu -d ubuntu /config
mkdir /data/{cache,git}
mv pkgsrc-mirror.tar.gz  /data/git/
mv packages /data/cache/
git clone git@github.com:imma/imma-config /config
git clone git@github.com:imma/ubuntu-home
mv ubuntu-home/.git .
rm -rf ubuntu-home
git reset --hard
script/cibuild
make cache
source .bashrc
home disable cache
script/cibuild
home enable cache

   29  home enable cache
   27  git pull
   46  git submodule update --init -j 10
   48  block clone
   48  block runmany 'cd $1 && git checkout master'
   28  home update
   31  home disable cache
   33  block bootstrap
   56  block lock
   58  home enable cache
