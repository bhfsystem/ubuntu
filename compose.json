{
  "version": "2.1",
  "networks": {
    "default": {
      "external": {
        "name": "admin_default"
      }
    }
  },
  "services": {
    "base": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:base",
      "hostname": "base"
    },
    "ubuntu": {
      "volumes": [
        "/data:/data",
        "/config:/config"
      ],
      "ports": [
        "${BLOCK_SSH_PORT}"
      ],
      "cap_add": [
        "NET_ADMIN"
      ],
      "dns_search": "node.consul",
      "image": "${BLOCK_REGISTRY}/block:ubuntu",
      "hostname": "ubuntu"
    }
  }
}
